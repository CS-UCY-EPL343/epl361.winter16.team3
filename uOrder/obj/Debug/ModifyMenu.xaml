        <Button x:Name="Remove_Category" Content="Remove Category" HorizontalAlignment="Left" Height="70" Margin="178,347,0,0" VerticalAlignment="Top" Width="378" FontSize="42.667"/>
        <ComboBox x:Name="CategoryBox" HorizontalAlignment="Left" Margin="181,272,0,0" VerticalAlignment="Top" Width="385" Height="73" RenderTransformOrigin="0.158,0.897"/>
        <ComboBox x:Name="ProductBox" HorizontalAlignment="Left" Margin="181,538,0,0" VerticalAlignment="Top" Width="385" Height="76" RenderTransformOrigin="0.158,0.897"/>
        <Button x:Name="EditCategory" Content="Edit Category" HorizontalAlignment="Left" Height="70" Margin="167,416,0,0" VerticalAlignment="Top" Width="378" FontSize="42.667"/>
        <Button x:Name="EditProduct" Content="Edit Product" HorizontalAlignment="Left" Height="70" Margin="185,685,0,0" VerticalAlignment="Top" Width="378" FontSize="42.667"/>
    </Grid>
</Page>

